#include "/home/srg91/.colors/beard"

! URxvt*termName: screen-256color
XTerm*termName: xterm-256color
URxvt*termName: rxvt-unicode
URxvt.depth: 32
URxvt.iso14755: false
URxvt.iso14755_2: false
URxvt*saveLines: 65535

! URxvt*font: -*-terminus-medium-*-*-*-14-*-*-*-*-*-*-*
! URxvt*boldFont: -*-terminus-bold-*-*-*-14-*-*-*-*-*-*-*

URxvt*font: -*-ttyp0-medium-*-*-*-14-*-*-*-*-*-*-*
URxvt*boldFont: -*-ttyp0-bold-*-*-*-14-*-*-*-*-*-*-*

! URxvt*font: -*-gohufont-medium-*-*-*-14-*-*-*-*-*-*-*
! URxvt*boldFont: -*-gohufont-bold-*-*-*-14-*-*-*-*-*-*-*

URxvt*cursorBlink: true

URxvt*scrollstyle: plain
URxvt*scrollColor: #daba8b
URxvt*thickness: 2
! URxvt*scrollBar_right: true
URxvt*scrollTtyOutput: false
URxvt*scrollTtyKeypress:  true
URxvt*scrollWithBuffer: true
URxvt*secondaryScreen: true
URxvt*secondaryScroll: false
! URxvt*print-pipe: cat > $HOME/$(echo urxvt.dump.$(date +'%Y%M%d%H%m%S'))

! -tabbedex
URxvt.perl-ext-common: default,clipboard,url-select,vtwheel,keyboard-select

! clipboard
URxvt.clipboard.copycmd:  xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard
URxvt.keysym.Control-Shift-C: perl:clipboard:copy
URxvt.keysym.Control-Shift-V: perl:clipboard:paste
URxvt.keysym.M-v: perl:clipboard:paste_escaped

! tabbedex
! URxvt.tabbed.autohide: true
! URxvt.tabbed.reopen-on-close: yes
! URxvt.keysym.Control-t: perl:tabbedex:new_tab
! URxvt.keysym.Control-Tab: perl:tabbedex:next_tab
! URxvt.keysym.Control-Shift-Tab: perl:tabbedex:prev_tab
! URxvt.keysym.Control-Shift-Left: perl:tabbedex:move_tab_left
! URxvt.keysym.Control-Shift-Right: perl:tabbedex:move_tab_right
! URxvt.keysym.Control-Shift-R: perl:tabbedex:rename_tab

! url-select
URxvt.url-select.launcher: /usr/bin/firefox
URxvt.url-select.underline: false
URxvt.keysym.C-i: perl:url-select:select_next

! keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

! ctrl+arrows keys
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

! Xft settings
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight

Xcursor.theme: Human

! Xterm settings
XTerm*locale: true
XTerm*metaSendsEscape: true
XTerm*saveLines: 65535

